{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "assets": ["dist/flightradar-flight-card.js"]
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": ["npm run format:check", "npm run build"],
    "after:bump": "npm run build"
  }
}
